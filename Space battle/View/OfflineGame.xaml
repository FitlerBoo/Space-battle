<Page x:Class="Space_battle.View.OfflineGame"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Space_battle.View"
      xmlns:o="clr-namespace:Space_battle.Offline"
      mc:Ignorable="d"
      d:DesignHeight="600" d:DesignWidth="800"
      Title="Game">

    <Grid>
        <Canvas Name="MyCanvas" Focusable="True" KeyUp="OnKeyUp" KeyDown="OnKeyDown">

            <Canvas.Background>
                <ImageBrush ImageSource="/Images/space background.png"
                    TileMode="Tile"
                    ViewportUnits="RelativeToBoundingBox"
                    Stretch="UniformToFill"/>
            </Canvas.Background>

            <TextBlock Name="PlayerHP" Style="{StaticResource Text_Style}" Text="PlayerHP : 100"/>
            <TextBlock Name="EnemyHP" Style="{StaticResource Text_Style}" Text="Enemy HP : 100"/>

        </Canvas>
    </Grid>
</Page>
