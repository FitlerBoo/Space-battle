<Page x:Class="Space_battle.View.Game"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:m="clr-namespace:Space_battle.Model"
      mc:Ignorable="d"
      d:DesignHeight="600" d:DesignWidth="800"
      Title="Game">

    <Canvas Name="MyCanvas" Focusable="True" KeyUp="OnKeyUp" KeyDown="OnKeyDown">

        <Canvas.Background>
            <ImageBrush ImageSource="/Images/space background.png"
                        TileMode="Tile"
                        ViewportUnits="RelativeToBoundingBox"
                        Stretch="UniformToFill"/>
        </Canvas.Background>

        <TextBlock Name="PlayerHP" Style="{StaticResource Text_Style}" Text="PlayerHP : 100"/>
        <TextBlock Name="Player2HP" Style="{StaticResource Text_Style}" Text="Enemy HP : 100"/>

    </Canvas>
</Page>
